--- a/src/audio_codec/libfaad/Makefile
+++ b/src/audio_codec/libfaad/Makefile
@@ -16,9 +16,11 @@ DEBUG  		= YES
 DEFINES		= 
 
 CROSS=$(CC:%gcc=%)
-G++		= $(CROSS)g++
-GCC		= $(CROSS)gcc
-LD 		= $(CROSS)ld
+#G++		= $(CROSS)g++
+#GCC		= $(CROSS)gcc
+#LD 		= $(CROSS)ld
