@@ -221,7 +221,7 @@
 	meson-fb {
 		compatible = "amlogic, meson-txlx";
 		dev_name = "meson-fb";
-		status = "okay";
+		status = "disabled";
 		interrupts = <0 3 1
 			0 89 1>;
 		interrupt-names = "viu-vsync", "rdma";
@@ -1593,3 +1593,12 @@
 	pinctrl-0 = <&spi_a_pins>;
 	cs-gpios = <&gpio GPIOZ_3 0>;
 };
+
+&drm_vpu {
+	status = "okay";
+	compatible = "amlogic,meson-txlx-vpu";
+};
+
+&drm_amhdmitx {
+	status = "okay";
+};
